<%= render "shared/navbar" %>
<% params[:catnav]%>

<div class="scroll-container-first">
  <div class="category-text">
    <h1><%= @category.name %></h1>
    <p><%= @category.description %></p>
  </div>
  <div data-controller="tasks-list" class="category-tasks">
    <div data-tasks-list-target="line" class="line"></div>
    <div data-tasks-list-target="cards" class="cards">
      <% @tasks.each do |task| %>
        <%= link_to category_task_path(@category, task) do %>
          <div class="card card-task">
            <div class="title">
              <h4><%= task.name %></h4>
              <p><%= task.start_time %> - <%= task.deadline %> weeks</p>
            </div>
            <div class="details">
              <% if task.completed == true %>
                <div class="completed">
                  <i class="fa-solid fa-check"></i>
                  <p>DONE</p>
                </div>
              <% end %>
              <i class="fa-solid fa-angle-right"></i>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
  <hr class="mt-4 mb-4">
</div>

<div class="scroll-container-last">
  <p class="padding"><strong>MY FILES</strong></p>
  <% if @documents.exists? %>
    <% if @documents.count > 2 %>
      <div class="scroll-container" style="grid-template-columns: repeat(<%= @documents.count %>, 160px)">
    <% elsif @documents.count == 2 %>
      <div class="scroll-container" style="grid-template-columns: repeat(<%= @documents.count %>, 1fr)">
    <% else %>
      <div class="scroll-container" style="grid-template-columns: 1fr">
    <% end %>
      <% @documents.each do |document| %>
        <div class="card-file">
          <% document.photos.each do |photo| %>
            <div class="card-file">
              <%= link_to photo.url, target: "_blank" do %>
                <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
              <% end %>
            </div>
            <p><%= document.name %></p>
          <% end %>
        </div>
      <% end %>
  <% else %>
      <p class="padding">You haven't uploaded any files yet</p>
  <% end %>
  </div>
</div>

<%= render "shared/navbar_bottom" %>
